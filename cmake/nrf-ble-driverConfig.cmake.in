# nrf-ble-driver cmake module
#
# The following import targets are created
# This module sets the following variables in your project::
#
#   nrf-ble-driver_FOUND - true if nrf-ble-driver is found on the system
#   nrf-ble-driver_INCLUDE_DIR - the directory containing nrf-ble-driver headers
#   nrf-ble-driver_LIBRARY
#   nrf-ble-driver_STATIC_LIBRARY

@PACKAGE_INIT@

include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")

foreach(SD_API_VER ${SD_API_VERS})
    string(TOLOWER ${SD_API_VER} SD_API_VER_L)

    get_target_property(@PROJECT_NAME@_${SD_API_VER} @NRF_BLE_DRIVER_SD_API_V2_SHARED_LIB INTERFACE_INCLUDE_DIRECTORIES)
    get_target_property(@PROJECT_NAME@_SD_API_V2_LIBRARY pc_ble_driver_shared_sd_api_v2 LOCATION)
    get_target_property(@PROJECT_NAME@_SD_API_V2_STATIC_LIBRARY pc_ble_driver_static_sd_api_v2 LOCATION)
endforeach(SD_API_VER)

# SDv2 related properties
get_target_property(
    @PROJECT_NAME@_SD_API_V2_INCLUDE_DIR 
    NRF_BLE_DRIVER_SD_API_V2_SHARED_LIB
    INTERFACE_INCLUDE_DIRECTORIES
)

get_target_property(
    @PROJECT_NAME@_SD_API_V2_LIBRARY
    NRF_BLE_DRIVER_SD_API_V2_SHARED_LIB
    LOCATION
)

get_target_property(
    @PROJECT_NAME@_SD_API_V2_STATIC_LIBRARY
    NRF_BLE_DRIVER_SD_API_V2_STATIC_LIB
    LOCATION
)

